      <HintPath>D:\Games\steamapps\common\RimWorld\RimWorld_Data\Managed\Assembly-CSharp.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="UnityEngine">
      <HintPath>D:\Games\steamapps\common\RimWorld\RimWorld_Data\Managed\UnityEngine.dll</HintPath>
      <Private>False</Private>
