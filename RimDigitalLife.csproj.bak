  <PropertyGroup>
    <Configuration>Release</Configuration>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputType>Library</OutputType>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>RimDigitalLife</AssemblyName>
    <Description>RimWorld Digital Life Mod - v1.1.0 by Maiya0126</Description>
    <Version>1.1.0</Version>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <Deterministic>false</Deterministic>
  </PropertyGroup>

  <PropertyGroup>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>$(SolutionDir)Assemblies\</OutputPath>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <!-- [v1.1.0] 完全移除 NuGet 依赖 - 改用本地引用 -->
  <ItemGroup>
    <!-- [MOD] 移除 NuGet 包，避免网络问题 -->
  </ItemGroup>

  <ItemGroup>
    <!-- [v1.1.0] RimWorld 1.6 本地 DLL 引用 -->
